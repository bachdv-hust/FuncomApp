<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FEFCFF"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".ui.event_detail.EventDetailActivity"
    tools:showIn="@layout/activity_event_detail">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="@dimen/dp_16">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_9"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvDateTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="@dimen/dp_5"
                android:fontFamily="@font/inter_regular"
                android:text="Thời gian: 07/05 tới 20:00 - 10/05"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_11"
                app:drawableStartCompat="@drawable/clock_1" />

            <TextView
                android:id="@+id/tvEventTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:fontFamily="@font/inter_semi_bold"
                android:text="Tham gia sự kiện rinh quà từ Credita lên tới 1000.000 đ . Tham gia ngay!"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_18" />

            <TextView
                android:id="@+id/tvCreateBy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:drawablePadding="@dimen/dp_8"
                android:text="Tạo bởi Credita"
                android:textColor="@color/black"
                app:drawableStartCompat="@drawable/ic_created_bby" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_9"
            android:orientation="vertical">

            <com.liihuu.progressbar.FloatTextProgressBar
                android:id="@+id/progressCoin"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:layout_marginTop="@dimen/dp_8"
                app:arrowPointRadius="50dp"
                app:backgroundColor="#d8d8d8"
                app:fillColor="#3CCA98"
                app:maxProgress="100"
                app:progress="50"
                app:progressWidth="@dimen/dp_8"
                app:rectColor="#3CCA98"
                app:textColor="#fff"
                app:triangleColor="#3CCA98" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_7">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/inter_regular"
                        android:text="Coin đã phân phát"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp_10" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/dp_15"
                            android:layout_height="@dimen/dp_15"
                            android:src="@drawable/ic_coin" />

                        <TextView
                            android:id="@+id/tvCoinCirculating"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp_8"
                            android:fontFamily="@font/inter_semi_bold"
                            android:text="500.000"
                            android:textColor="@color/black"
                            android:textSize="@dimen/sp_16" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:gravity="end"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/inter_regular"
                        android:text="Tổng coin thưởng"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp_10" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical|right"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/dp_15"
                            android:layout_height="@dimen/dp_15"
                            android:src="@drawable/ic_coin" />

                        <TextView
                            android:id="@+id/tvCoinTotal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp_8"
                            android:fontFamily="@font/inter_semi_bold"
                            android:text="1.500.000"
                            android:textColor="@color/black"
                            android:textSize="@dimen/sp_16" />
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>

        <techlab.ai.hackathon.share_ui.HeaderTitleView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            app:text="Thông tin chi tiết" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dp_3"
            android:layout_marginTop="@dimen/dp_15"
            app:cardCornerRadius="@dimen/dp_8"
            app:cardElevation="1dp"
            app:contentPadding="@dimen/dp_10">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="5dp"
                        android:layout_height="5dp"
                        android:src="@drawable/shape_dot" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_8"
                        android:text="Mô tả sự kiện"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp_12" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tvEventDescription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_9"
                    android:fontFamily="@font/inter_regular"
                    android:paddingHorizontal="@dimen/dp_10"
                    android:maxLines="3"
                    android:ellipsize="end"
                    android:text="️🛒 Lễ đến gần nhu cầu tiêu dùng gia tăng, đừng
quên Credita luôn sẵn sàng hỗ trợ bạn mỗi khi cần
với những khoản vay phù hợp với mọi nhu cầu. Và
..."
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_12" />

                <TextView
                    android:id="@+id/btnSeeMore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/dp_16"
                    android:background="@drawable/bg_grey_r6"
                    android:paddingHorizontal="@dimen/dp_8"
                    android:paddingVertical="@dimen/dp_3"
                    android:text="Xem thêm"
                    android:textSize="@dimen/sp_12" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <techlab.ai.hackathon.share_ui.HeaderTitleView
            android:id="@+id/headerMission"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_24"
            app:text="Nhiệm vụ" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/ctnDownload"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_16"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/dp_30"
                    android:layout_height="@dimen/dp_30"
                    app:srcCompat="@drawable/ic_download" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_8"
                    android:text="Tải ứng dụng"
                    android:textColor="@color/black" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ctnSurvey"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_16"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/dp_30"
                    android:layout_height="@dimen/dp_30"
                    app:srcCompat="@drawable/ic_tracnghiem" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_8"
                    android:text="Trắc nghiệm"
                    android:textColor="@color/black" />
            </LinearLayout>
        </LinearLayout>

        <techlab.ai.hackathon.share_ui.HeaderTitleView
            android:id="@+id/headerDonors"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_24"
            app:text="Nhà tài trợ" />

        <LinearLayout
            android:id="@+id/llDonors"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_16"
            android:orientation="vertical">

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/rlHeaderUserJoin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_24">

            <techlab.ai.hackathon.share_ui.HeaderTitleView
                android:id="@+id/headerUserJoin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:text="150 người đã tham gia" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_12"
                android:text="Xem thêm" />
        </RelativeLayout>


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dp_2"
            android:layout_marginTop="@dimen/dp_16"
            android:layout_marginBottom="@dimen/dp_2"
            app:cardCornerRadius="@dimen/dp_8"
            app:cardElevation="1dp">

            <LinearLayout
                android:id="@+id/llUsersJoin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            </LinearLayout>
        </androidx.cardview.widget.CardView>


        <techlab.ai.hackathon.share_ui.HeaderTitleView
            android:id="@+id/headerLinks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_24"
            app:text="Liên kết" />

        <LinearLayout
            android:id="@+id/llLinks"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_16"
            android:orientation="vertical">

        </LinearLayout>
    </LinearLayout>

</androidx.core.widget.NestedScrollView>