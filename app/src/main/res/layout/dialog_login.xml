<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.login.LoginDialog">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dp_20"
            android:background="@drawable/bg_login_screen"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_86"
                android:background="@drawable/bg_login_top"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvTitleScreen"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_10"
                    android:layout_weight="1"
                    android:fontFamily="@font/inter_bold"
                    android:text="ĐĂNG NHẬP TÀI KHOẢN"
                    android:textColor="#FFFFFF" />

                <ImageView
                    android:layout_width="@dimen/dp_74"
                    android:layout_height="@dimen/dp_66"
                    android:layout_margin="@dimen/dp_10"
                    android:src="@drawable/ic_fun_login" />
            </LinearLayout>

            <TextView
                android:id="@+id/tvDes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_12"
                android:fontFamily="@font/inter_regular"
                android:text="Vui lòng sử dụng MNV của bạn để  đăng ký\ngia nhập thế giới FUNCOIN!"
                android:textColor="#7E7777"
                android:textSize="@dimen/sp_12" />

            <EditText
                android:id="@+id/tvAccount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_15"
                android:hint="Mã nhân viên của bạn"
                android:padding="@dimen/dp_10"
                android:textColor="#373636"
                android:textColorHint="#B7B7B7" />

            <EditText
                android:id="@+id/tvPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_15"
                android:hint="Mật khẩu"
                android:padding="@dimen/dp_10"
                android:textColor="#373636"
                android:textColorHint="#B7B7B7" />

            <EditText
                android:id="@+id/tvNameUser"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_10"
                android:hint="Tên hiển thị"
                android:padding="@dimen/dp_15"
                android:textColor="#373636"
                android:textColorHint="#B7B7B7" />

            <TextView
                android:id="@+id/btnLogin"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:layout_marginHorizontal="@dimen/dp_40"
                android:layout_marginTop="@dimen/dp_26"
                android:background="@drawable/selector_bg_btn_register"
                android:enabled="false"
                android:fontFamily="@font/inter_semi_bold"
                android:gravity="center"
                android:text="ĐĂNG KÝ"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_18" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp_8"
                android:layout_marginBottom="@dimen/dp_14"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvQues"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:fontFamily="@font/inter_semi_bold"
                    android:text="Bạn đã có tài khoản?"
                    android:textColor="#2E2E2E"
                    android:textSize="@dimen/sp_12" />

                <TextView
                    android:id="@+id/tvChangeTypeLogin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginStart="@dimen/dp_3"
                    android:fontFamily="@font/inter_semi_bold"
                    android:text="Tham gia ngay"
                    android:textColor="#F2783D"
                    android:textSize="@dimen/sp_12" />
            </LinearLayout>


        </LinearLayout>

        <ImageView
            android:id="@+id/btnExit"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_30"
            android:src="@drawable/ic_exit" />
    </LinearLayout>


</RelativeLayout>