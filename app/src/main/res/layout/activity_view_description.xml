<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.multi_choice.MultiChoiceActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_56"
        android:id="@+id/toolbar">
        <ImageView
            android:id="@+id/ic_back_multi_choice"
            android:layout_width="@dimen/dp_25"
            android:layout_height="@dimen/dp_25"
            android:src="@drawable/ic_back"
            android:padding="@dimen/dp_4"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dp_12"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dp_23"
            android:layout_toRightOf="@+id/ic_back_multi_choice"
            android:fontFamily="@font/inter_semi_bold"
            android:text="Mô tả sự kiện"
            android:textColor="@color/Base_B500"
            android:textSize="@dimen/sp_18" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_alignParentBottom="true"
            android:background="@color/color_EAEAEA"/>
    </RelativeLayout>

    <WebView
        android:id="@+id/wvDescipt"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar"
        android:layout_marginHorizontal="@dimen/dp_12"
        android:layout_marginTop="@dimen/dp_26"
        android:layout_marginBottom="@dimen/dp_26" />


</RelativeLayout>