<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:paddingHorizontal="@dimen/dp_25"
    android:paddingBottom="@dimen/dp_20"
    android:layout_margin="@dimen/dp_30"
    android:background="@drawable/background_dialog_result_question"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/tv_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kết quả"
        android:textSize="@dimen/sp_18"
        android:textColor="@color/Base_B500"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_12"
        android:fontFamily="@font/inter_semi_bold"/>
    <RelativeLayout
        android:layout_marginTop="@dimen/dp_28"
        android:id="@+id/total_question"
        android:layout_below="@+id/tv_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tổng số câu hỏi tham gia là"
            android:textColor="@color/Base_B500"
            android:fontFamily="@font/inter_regular"
            android:layout_alignParentStart="true"/>

        <TextView
            android:id="@+id/tv_total_question"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:fontFamily="@font/inter_regular"
            android:text="0"
            android:textColor="@color/Base_B500" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_marginTop="@dimen/dp_26"
        android:id="@+id/correct_question"
        android:layout_below="@+id/total_question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View
            android:layout_centerVertical="true"
            android:layout_width="@dimen/dp_4"
            android:layout_height="@dimen/dp_17"
            android:background="@color/color_3CCA98"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="@dimen/dp_10"
            android:fontFamily="@font/inter_regular"
            android:text="Số câu trả lời đúng"
            android:textColor="@color/Base_B500" />

        <TextView
            android:id="@+id/tv_total_question_correct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:fontFamily="@font/inter_regular"
            android:text="0"
            android:textColor="@color/color_3CCA98" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_marginTop="@dimen/dp_26"
        android:id="@+id/fade_question"
        android:layout_below="@+id/correct_question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View
            android:layout_centerVertical="true"
            android:layout_width="@dimen/dp_4"
            android:layout_height="@dimen/dp_17"
            android:background="@color/red"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="@dimen/dp_10"
            android:fontFamily="@font/inter_regular"
            android:text="Số câu trả lời sai"
            android:textColor="@color/Base_B500" />

        <TextView
            android:id="@+id/tv_total_question_false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:fontFamily="@font/inter_regular"
            android:text="0"
            android:textColor="@color/red" />
    </RelativeLayout>

    <TextView
        android:id="@+id/btn_try"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fade_question"
        android:layout_marginTop="@dimen/dp_30"
        android:background="@drawable/background_btn_try"
        android:fontFamily="@font/inter_semi_bold"
        android:gravity="center"
        android:paddingTop="@dimen/dp_12"
        android:paddingBottom="@dimen/dp_12"
        android:text="Thử lại"
        android:textColor="@color/white" />
</RelativeLayout>