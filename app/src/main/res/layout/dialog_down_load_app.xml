<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginHorizontal="@dimen/dp_40"
        android:background="@drawable/bg_dialog_download_app"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:layout_marginTop="@dimen/dp_26"
            android:layout_width="@dimen/dp_168"
            android:layout_height="@dimen/dp_168"
            android:src="@drawable/ic_ch_play" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_semi_bold"
            android:gravity="center_horizontal"
            android:text="Tải ứng dụng, đánh giá và nhận thưởng"
            android:textColor="#000000"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/btnDownload"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:layout_marginHorizontal="@dimen/dp_30"
            android:layout_marginTop="@dimen/dp_12"
            android:layout_marginBottom="@dimen/dp_20"
            android:background="@drawable/bg_btn_download_app"
            android:fontFamily="@font/inter_semi_bold"
            android:gravity="center"
            android:text="Tải xuống ngay"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_18" />


    </LinearLayout>

</RelativeLayout>