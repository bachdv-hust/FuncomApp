<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.multi_choice.MultiChoiceActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_56"
        android:id="@+id/toolbar">
        <ImageView
            android:id="@+id/ic_back_multi_choice"
            android:layout_width="@dimen/dp_17"
            android:layout_height="@dimen/dp_17"
            android:src="@drawable/ic_back"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dp_12"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dp_23"
            android:layout_toRightOf="@+id/ic_back_multi_choice"
            android:fontFamily="@font/inter_semi_bold"
            android:text="Trắc nghiệm"
            android:textColor="@color/Base_B500"
            android:textSize="@dimen/sp_18" />

        <TextView
            android:id="@+id/tv_numQuestion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dp_23"
            android:layout_marginEnd="@dimen/dp_15"
            android:fontFamily="@font/inter_semi_bold"
            android:text="0/20"
            android:textColor="@color/Base_B500"
            android:textSize="@dimen/sp_18" />
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_alignParentBottom="true"
            android:background="@color/color_EAEAEA"/>
    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_marginHorizontal="@dimen/dp_12"
        android:id="@+id/rcv_multichoice"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/btn_confirm_multi_choice"
        android:layout_below="@+id/toolbar"
        android:layout_marginTop="@dimen/dp_26"
        android:layout_marginBottom="@dimen/dp_26" />

    <TextView
        android:id="@+id/btn_confirm_multi_choice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginHorizontal="@dimen/dp_12"
        android:layout_marginBottom="@dimen/dp_23"
        android:background="@drawable/background_btn_multichoice"
        android:fontFamily="@font/inter_semi_bold"
        android:gravity="center"
        android:paddingTop="@dimen/dp_12"
        android:paddingBottom="@dimen/dp_12"
        android:textAllCaps="false"
        android:text="@string/confirm_finish"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_18" />

</RelativeLayout>